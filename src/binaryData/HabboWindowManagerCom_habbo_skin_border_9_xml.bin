<?xml version="1.0"?>
<skin name="border_9" version="0.0">

    <!-- shared variables -->

    <variables>
        <variable key="asset"	value="skin_ubuntu_bg_9"	type="String" />
    </variables>

    <!-- the following maps layouts for render states -->

    <states>
        <state name="default"  layout="border_9" template="border_9" />
    </states>

    <!-- templates defines regions in bitmap asset -->

    <templates>

        <template name="border_9" asset="$asset">
            <entities>
                <entity name="top_left" type="bitmap"><region><Rectangle x="0" y= "0" width="7" height="7" /></region></entity>
                <entity name="top_center" type="bitmap"><region><Rectangle x="7" y= "0" width="1" height="7" /></region></entity>
                <entity name="top_right" type="bitmap"><region><Rectangle x="6" y= "0" width="7" height="7" /></region></entity>

                <entity name="mid_left" type="bitmap"><region><Rectangle x="0" y= "7" width="7" height="1" /></region></entity>
                <entity name="mid_center" type="bitmap"><region><Rectangle x="6" y= "7" width="1" height="1" /></region></entity>
                <entity name="mid_right" type="bitmap"><region><Rectangle x="6" y= "7" width="7" height="1" /></region></entity>

                <entity name="btm_left" type="bitmap"><region><Rectangle x="0" y= "6" width="7" height="8" /></region></entity>
                <entity name="btm_center" type="bitmap"><region><Rectangle x="6" y= "6" width="1" height="8" /></region></entity>
                <entity name="btm_right" type="bitmap"><region><Rectangle x="6" y= "6" width="7" height="8" /></region></entity>

            </entities>
        </template>

    </templates>

    <!-- markup for layout drawer -->

    <layouts>
        <layout name="border_9" transparent="true">
            <entities>

                <!-- top left -->

                <entity name="top_left" id="0">
                    <region><Rectangle x="0" y="0" width="7" height="7" /></region>
                    <scale horizontal="fixed" vertical="fixed" />
                </entity>

                <!-- top center -->

                <entity name="top_center" id="0">
                    <region><Rectangle x="7"  y="0" width="1" height="7" /></region>
                    <scale horizontal="strech" vertical="fixed" />
                </entity>

                <!-- top right -->

                <entity name="top_right" id="0">
                    <region><Rectangle x="8" y="0" width="7" height="7" /></region>
                    <scale horizontal="move" vertical="fixed" />
                </entity>

                <!-- mid left -->

                <entity name="mid_left" id="0">
                    <region><Rectangle x="0" y="7" width="7" height="1" /></region>
                    <scale horizontal="fixed" vertical="strech" />
                </entity>

                <!-- mid center -->

                <entity name="mid_center" id="0">
                    <region><Rectangle x="7" y="7" width="1" height="1" /></region>
                    <scale horizontal="strech" vertical="strech" />
                </entity>

                <!-- mid right -->

                <entity name="mid_right" id="0">
                    <region><Rectangle x="8" y="7" width="7" height="1" /></region>
                    <scale horizontal="move" vertical="strech" />
                </entity>

                <!-- btm left -->

                <entity name="btm_left" id="0">
                    <region><Rectangle x="0" y="8" width="7" height="8" /></region>
                    <scale horizontal="fixed" vertical="move" />
                </entity>

                <!-- btm center -->

                <entity name="btm_center" id="0">
                    <region><Rectangle x="7"  y="8" width="1" height="8" /></region>
                    <scale horizontal="strech" vertical="move" />
                </entity>

                <!-- btm right -->

                <entity name="btm_right" id="0">
                    <region><Rectangle x="8" y="8" width="7" height="8" /></region>
                    <scale horizontal="move" vertical="move" />
                </entity>

            </entities>

        </layout>
    </layouts>
</skin>