<?xml version="1.0"?>
<skin name="illumina_light_skin_border_balloon" version="0.0">

    <!-- shared variables -->
    <variables>
        <variable key="asset" value="illumina_light_balloon_png" type="String"/>
    </variables>

    <!-- the following maps states to layouts and templates -->
    <states>
        <state name="default" layout="illumina_light_border_balloon" template="illumina_light_border_balloon_template"/>
    </states>

    <!-- templates defines regions in bitmap asset -->
    <templates>
        <template name="illumina_light_border_balloon_template" asset="$asset">
            <entities>
                <entity name="background_top_left" type="bitmap"><region><Rectangle x="0" y="0" width="5" height="10"/></region></entity>
                <entity name="background_top_center" type="bitmap"><region><Rectangle x="5" y="0" width="4" height="10"/></region></entity>
                <entity name="background_top_right" type="bitmap"><region><Rectangle x="9" y="0" width="5" height="10"/></region></entity>
                <entity name="background_center_left" type="bitmap"><region><Rectangle x="0" y="10" width="1" height="2"/></region></entity>
                <entity name="background_center_center" type="bitmap"><region><Rectangle x="1" y="10" width="12" height="2"/></region></entity>
                <entity name="background_center_right" type="bitmap"><region><Rectangle x="13" y="10" width="1" height="2"/></region></entity>
                <entity name="background_bottom_left" type="bitmap"><region><Rectangle x="0" y="12" width="5" height="5"/></region></entity>
                <entity name="background_bottom_center" type="bitmap"><region><Rectangle x="5" y="12" width="4" height="5"/></region></entity>
                <entity name="background_bottom_right" type="bitmap"><region><Rectangle x="9" y="12" width="5" height="5"/></region></entity>
            </entities>
        </template>
    </templates>

    <!-- markup for layout drawer -->
    <layouts>
        <layout name="illumina_light_border_balloon" transparent="true">
            <entities>
                <entity name="background_top_left" id="0" colorize="true"><region><Rectangle x="0" y="0" width="5" height="10"/></region><scale horizontal="fixed" vertical="fixed"/></entity>
                <entity name="background_top_center" id="0" colorize="true"><region><Rectangle x="5" y="0" width="4" height="10"/></region><scale horizontal="strech" vertical="fixed"/></entity>
                <entity name="background_top_right" id="0" colorize="true"><region><Rectangle x="9" y="0" width="5" height="10"/></region><scale horizontal="move" vertical="fixed"/></entity>
                <entity name="background_center_left" id="0" colorize="true"><region><Rectangle x="0" y="10" width="1" height="2"/></region><scale horizontal="fixed" vertical="strech"/></entity>
                <entity name="background_center_center" id="0" colorize="true"><region><Rectangle x="1" y="10" width="12" height="2"/></region><scale horizontal="strech" vertical="strech"/></entity>
                <entity name="background_center_right" id="0" colorize="true"><region><Rectangle x="13" y="10" width="1" height="2"/></region><scale horizontal="move" vertical="strech"/></entity>
                <entity name="background_bottom_left" id="0" colorize="true"><region><Rectangle x="0" y="12" width="5" height="5"/></region><scale horizontal="fixed" vertical="move"/></entity>
                <entity name="background_bottom_center" id="0" colorize="true"><region><Rectangle x="5" y="12" width="4" height="5"/></region><scale horizontal="strech" vertical="move"/></entity>
                <entity name="background_bottom_right" id="0" colorize="true"><region><Rectangle x="9" y="12" width="5" height="5"/></region><scale horizontal="move" vertical="move"/></entity>
            </entities>
        </layout>
    </layouts>
</skin>