<?xml version="1.0"?>
<skin name="illumina_light_skin_border_chat_bubble" version="0.0">

	<!-- shared variables -->
	<variables>
		<variable key="asset" value="illumina_light_bubble_chat_bg_png" type="String"/>
	</variables>

	<!-- the following maps states to layouts and templates -->
	<states>
		<state name="default" layout="illumina_light_border_chat_bubble" template="illumina_light_border_chat_bubble_template"/>
	</states>

	<!-- templates defines regions in bitmap asset -->
	<templates>
		<template name="illumina_light_border_chat_bubble_template" asset="$asset">
			<entities>
				<entity name="top_left" type="bitmap"><region><Rectangle x="0" y="0" width="4" height="5"/></region></entity>
				<entity name="top_center" type="bitmap"><region><Rectangle x="4" y="0" width="21" height="5"/></region></entity>
				<entity name="top_right" type="bitmap"><region><Rectangle x="25" y="0" width="4" height="5"/></region></entity>
				<entity name="center" type="bitmap"><region><Rectangle x="0" y="5" width="1" height="1"/></region></entity>
				<entity name="bottom_left" type="bitmap"><region><Rectangle x="0" y="22" width="4" height="7"/></region></entity>
				<entity name="bottom_center" type="bitmap"><region><Rectangle x="4" y="22" width="21" height="7"/></region></entity>
				<entity name="bottom_right" type="bitmap"><region><Rectangle x="25" y="22" width="4" height="7"/></region></entity>
			</entities>
		</template>
	</templates>

	<!-- markup for layout drawer -->
	<layouts>
		<layout name="illumina_light_border_chat_bubble" transparent="true">
			<entities>
				<entity name="top_left" id="0" colorize="false"><region><Rectangle x="0" y="0" width="4" height="5"/></region><scale horizontal="fixed" vertical="fixed"/></entity>
				<entity name="top_center" id="0" colorize="false"><region><Rectangle x="4" y="0" width="21" height="5"/></region><scale horizontal="strech" vertical="fixed"/></entity>
				<entity name="top_right" id="0" colorize="false"><region><Rectangle x="25" y="0" width="4" height="5"/></region><scale horizontal="move" vertical="fixed"/></entity>
				<entity name="center" id="0" colorize="false"><region><Rectangle x="0" y="5" width="29" height="1"/></region><scale horizontal="strech" vertical="strech"/></entity>
				<entity name="bottom_left" id="0" colorize="false"><region><Rectangle x="0" y="6" width="4" height="7"/></region><scale horizontal="fixed" vertical="move"/></entity>
				<entity name="bottom_center" id="0" colorize="false"><region><Rectangle x="4" y="6" width="21" height="7"/></region><scale horizontal="strech" vertical="move"/></entity>
				<entity name="bottom_right" id="0" colorize="false"><region><Rectangle x="25" y="6" width="4" height="7"/></region><scale horizontal="move" vertical="move"/></entity>
			</entities>
		</layout>
	</layouts>
</skin>